<% book.book_comments.each do |book_comment| %>
  <%= link_to user_path(book_comment) do%>
  <%=image_tag book_comment.user.get_profile_image(50,50)%>
  <%end%>
  <%= book_comment.comment %>
  <% if book_comment.user == current_user %>
    <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote:true, data: {"turbolinks" => false},class:"btn btn-sm btn-danger" %>
  <% end %>
  <div><%= link_to book_comment.user.name,user_path(book_comment) %></div>
<% end %>