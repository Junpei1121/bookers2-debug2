<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= user.name %></td>
        <td>
          フォロー数<span id="followers_count"><%= user.followers.count %></span></td>
        <td>
          フォロワー数<span id="followeds_count"><%= user.followeds.count %></span></td>
        <td>
          <div id="follow_<%= user.id %>" >
            <%= render "relationships/follow", user: user %>
        </div>
        </td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
