<% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete,remote: true, data: {"turbolinks" => false}, class: "btn btn-danger mb-3" %>
      <% else %>
         <%= link_to "フォローする", user_relationships_path(user.id), method: :post,remote: true, data: {"turbolinks" => false}, class: "btn btn-success mb-3" %>
      <% end %>
    <% end %>